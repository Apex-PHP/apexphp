{
    "name": "vfeitoza/apexphp",
    "description": "ApexPHP - Framework PHP moderno para desenvolvimento rápido com rotas dinâmicas, Attributes e arquitetura MVC",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=8.1",
        "dflydev/fig-cookies": "^3.1",
        "eftec/bladeone": "^4.10",
        "filp/whoops": "^2.15",
        "firebase/php-jwt": "^6.10",
        "guzzlehttp/psr7": "^2.0",
        "http-interop/http-factory-guzzle": "^1.0",
        "illuminate/database": "^10.0",
        "illuminate/events": "^10.0",
        "illuminate/pagination": "^10.0",
        "league/climate": "^3.10",
        "monolog/monolog": "^3.5",
        "php-di/php-di": "^7.0",
        "predis/predis": "^2.2",
        "robmorgan/phinx": "^0.15",
        "slim/csrf": "^1.3",
        "slim/psr7": "^1.6",
        "slim/slim": "4.*",
        "symfony/cache": "^6.4",
        "symfony/console": "^6.4",
        "symfony/http-foundation": "^6.4",
        "tuupola/cors-middleware": "^1.4",
        "vlucas/phpdotenv": "^5.6",
        "vlucas/valitron": "^1.4",
        "zircote/swagger-php": "^5.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Framework\\": "src/"
        },
        "files": [
            "app/Helpers/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "serve": "php -S localhost:8000 -t public",
        "post-create-project-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}